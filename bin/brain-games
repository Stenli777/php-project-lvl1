#!/usr/bin/env php
<?php

namespace Php\Project\Lvl1\Cli;

use function BrainGames\Cli\greeting;

$autoloadParth1 = __DIR__ . '/../../../autoload.php';
$autoloadParth2 = __DIR__ . '/../vendor/autoload.php';

if (file_exists($autoloadParth1)) {
	require_once $autoloadParth1;
} else {
	require_once $autoloadParth2;
}

greeting();

